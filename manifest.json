{
    "name": "Selection Search",
    "version": "0.8.7",
    "manifest_version" : 2,

    "description": "Search for the selected text in search engines",

    "minimum_chrome_version": "35",

    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },

    "options_page": "options/options.html",

    "background": {
        "page" : "background/background.html",
        "persistent" : true
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "file://*/*"],
            "js": ["popup/popup.js", "popup/activators.js", "common/actionutils.js",
                "popup/actions.js", "popup/style.js", "popup/button.js",
                "common/urlparse.js", "common/jquery-2.1.4.min.js",
                "old/engine-editor.js", "old/extractform.js",
                "popup/positioning.js", "popup/init_script.js"],
                "run_at" : "document_end",
                "all_frames" : true
        },
        {
            "matches": ["http://mycroftproject.com/*"],
            "js": ["old/opensearch.js", "sites/mycroft.js"],
            "run_at" : "document_end"
        }
    ],

    "permissions": [
        "contextMenus",
        "storage",
        "notifications",
        "clipboardWrite",
        "tabs"
    ],

    "web_accessible_resources": [
        "img/folder.png",
        "img/icon16.png",
        "img/icon48.png",
        "img/close.png",
        "img/ajax-loader.gif",
        "img/copy.png",
        "img/default_favicon.png",
        "old/postsearch.html",
        "old/postsearch.js"
    ]


}
